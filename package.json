{
  "name": "advanced-node",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Matheus <torresmiranda.rj@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": "18.x",
    "yarn": "1.22.19"
  },
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "lint": "eslint \"{src,tests}/**/*.ts\" --fix",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "start": "node dist/main/api",
    "test": "dotenv -e .env.local -- jest --passWithNoTests --no-cache --runInBand",
    "test:cov": "npm test -- --coverage",
    "test:staged": "npm test -- --findRelatedTests",
    "test:watch": "npm test -- --watch",
    "test:fb-api": "npm test -- -c ./jest.integration.config.ts tests/external/facebook-api.test.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^1.3.5",
    "jsonwebtoken": "^9.0.0",
    "module-alias": "^2.2.2",
    "pg": "^8.6.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^5.0.0",
    "typeorm": "0.2.29"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/module-alias": "^2.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "dotenv-cli": "^7.2.1",
    "eslint": "8.0.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.3.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-mock-extended": "^3.0.4",
    "lint-staged": "^13.2.1",
    "pg-mem": "^1.9.11",
    "prettier": "^2.8.7",
    "ts-jest": "^29.1.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
}
